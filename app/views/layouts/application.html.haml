!!!html
%html
  %head
    %title RssReader
    = stylesheet_link_tag "application", :media => "all"
    = javascript_include_tag "application"
    = csrf_meta_tags
  %body
    %div#notice
      %p.info
        = notice
      %p.alert
        = alert

    %div#logo
      /some logo

    %div#nav
      - if user_signed_in?
        %div.search_form
          %span Some search
        %div.nav_link
          = link_to 'Edit Profile', edit_user_registration_url
        %div.nav_link
          = link_to 'Logout', destroy_user_session_url, :method => :delete
      - else
        %div.nav_link
          = link_to 'Login', new_user_session_url
        %div.nav_link
          = link_to 'Sign Up', new_user_registration_url
      %div.nav_link
        = link_to 'Home', root_url
    %div#main_container
      = yield
