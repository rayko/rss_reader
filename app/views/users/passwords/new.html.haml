%div#users_container
  %div#content
    %h3.users_titles Forgot your password?
    %div.content_block
      %div.users_form
        = semantic_form_for resource, :as => resource_name, :url => password_path(resource_name), :html => { :method => :post } do |form|
          = form.inputs :email
          = form.actions do
            = form.action :submit, :label => 'Send me reset password instruction'
    = render "users/shared/links"
