= semantic_form_for resource, :as => resource_name, :url => password_path(resource_name), :html => { :method => :post, :class => 'form-horizontal' } do |form|
  = form.inputs :title => 'Forgot your password?' do
    = form.input :email
  = form.actions do
    = form.action :submit, :label => 'Send Instructions', :button_html => {:class => 'btn btn-primary', :disable_with => 'Sending...'}

= render "users/shared/links"
