= semantic_form_for resource, :as => resource_name, :url => registration_path(resource_name), :html => {:class => 'form-horizontal'} do |form|
  //= devise_error_messages!
  = form.inputs :title => 'Sing Up' do
    = form.input :first_name
    = form.input :last_name
    = form.input :username
    = form.input :email
    = form.input :password
    = form.input :password_confirmation

  = form.actions do
    = form.action :submit, :label => 'Submit', :button_html => {:class => 'btn btn-primary', :disable_with => 'Registering...'}

= render "users/shared/links"
