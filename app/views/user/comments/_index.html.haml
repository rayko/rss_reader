%div.comments
  - if @comments.any?
    - @comments.each do |comment|
      = render :partial => 'comment', :locals => {:comment => comment}
%div.comment_form

  = form_for @comment, :url => user_article_comments_url, :remote => true, :html => {:class => 'new_comment', 'data-target' => 'comments'} do |form|
    %fieldset
      = form.hidden_field :article_id, :value => @article.id
      = form.text_area :text, :rows => 3, :class => 'input-block-level'
      = form.submit 'Add', :class => 'btn', :disable_with => 'Adding...'