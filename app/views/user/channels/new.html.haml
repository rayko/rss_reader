= semantic_form_for @channel, :url => user_channels_url, :html => {:class => 'form-horizontal'} do |form|
  = form.inputs :title => 'New Channel' do
    = form.input :url
  = form.actions do
    = form.action :submit, :label => 'Add', :button_html => {:class => 'btn btn-primary', :disable_with => 'Adding...'}

= link_to 'Back', user_channels_path, :class => 'btn'
