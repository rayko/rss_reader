= semantic_form_for @channel, :url => user_channel_url(@channel), :html => {:class => 'form-horizontal'} do |form|
  = form.inputs :title => 'Edit Channel' do
    = form.input :name
  = form.actions do
    = form.action :submit, :label => 'Save', :button_html => {:class => 'btn btn-primary', :disable_with => 'Saving...'}

.btn-group
  = link_to 'Show', user_channel_url(@channel), :class => 'btn'
  = link_to 'Back', user_channels_url, :class => 'btn'
