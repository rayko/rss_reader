= form_for :search, :url => user_search_url, :html => {:class => 'form-inline my-2 my-lg-0'} do |form|
  = form.text_field :query, :class => 'form-control mr-sm-2', "aria-label" => "Search", :placeholder => "Search", :type => "search"
  = form.select :channel_id, options_from_collection_for_select(current_user.channels, :id, :name), {:include_blank => 'All Channels'}, :class => 'form-control'
  = form.submit 'Search', :class => 'btn btn-outline-success my-2 my-sm-0 mx-2', :type => 'search'
