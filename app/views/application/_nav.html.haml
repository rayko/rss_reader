.navbar.navbar-fluid-top
  .navbar-inner
    .container-fluid
      %a.btn.btn-navbar(data-target=".nav-collapse" data-toggle="collapse")
        %span.icon-bar
        %span.icon-bar
        %span.icon-bar
      %a.brand(href="#") Altoros Rss Reader
      .container.nav-collapse
        %ul.nav.pull-left
          %li
            #search_form
              = render :partial => 'user/search/form'
        %ul.nav.pull-right
          - if user_signed_in?
            %li= link_to 'Home', root_url
            %li= link_to 'Edit Profile', edit_user_registration_url
            %li= link_to 'Logout', destroy_user_session_url, :method => :delete
          - else
            %li= link_to 'Home', root_url
            %li= link_to 'Login', new_user_session_url
            %li= link_to 'Sign Up', new_user_registration_url
