%div#logo
  /some logo

%div#nav
  - if user_signed_in?
    %div.search_form
      %span Some search
    %div.nav_link
      = link_to 'Edit Profile', edit_user_registration_url
    %div.nav_link
      = link_to 'Logout', destroy_user_session_url, :method => :delete
  - else
    %div.nav_link
      = link_to 'Login', new_user_session_url
    %div.nav_link
      = link_to 'Sign Up', new_user_registration_url

%div#main_container
  %div#float_warpper
    %div#left_panel
      %div#special_channels
        = render :partial => 'user/channels/special_channels'
      %div#add_channel
        = render :partial => 'user/channels/form'
      %div#channel_list
        Loading...
    %div#article_list
      = render :partial => 'user/articles/articles_list'
